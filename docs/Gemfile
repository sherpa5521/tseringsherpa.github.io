source "https://rubygems.org"

# General dependencies
gem "github-pages", group: :jekyll_plugins
gem "minimal-mistakes-jekyll", "~> 4.26" # Match theme version
gem "rake"

# Windows-specific gems (safe to include)
gem "tzinfo-data" # Required for Windows time zones
gem "wdm", "~> 0.1.0", platforms: [:mingw, :mswin]

# Explicit Jekyll version
gem "jekyll", "~> 4.0"

# Grouped Jekyll plugins
group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-sitemap"
  gem "jekyll-gist"
  gem "jekyll-feed"
  gem "jemoji"
  gem "jekyll-include-cache"
  gem "jekyll-seo-tag" # SEO plugin
end
